{
  "env": {
    "browser": true,
    "es2020": true,
    "node": false,
    "webextensions": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "rules": {
    "no-restricted-syntax": [
      "off",
      {
        // We need modern Chrome, might as well allow iterators.
        "selector": "ForOfStatement"
      }
    ],
    // Webpack strips console.log etc. from production builds.
    "no-console": "off",
    // Prefer continue/break over deep nesting.
    "no-continue": "off"
  }
}
