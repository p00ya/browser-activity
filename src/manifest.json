{
  "name": "Browser Activity",
  "description": "Publish browser activity to Discord's Rich Presence",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "declarativeContent",
    "nativeMessaging",
    "scripting"
  ],
  "action": {
    "title": "Publish this tab's activity"
  },
  "background": {
    "service_worker": "background.js"
  }
}